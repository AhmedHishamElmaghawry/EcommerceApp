<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <!-- Name of the clothing -->
    <TextView
        android:id="@+id/clothingName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Clothing Name"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Size of the clothing -->
    <TextView
        android:id="@+id/clothingSize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Size: Medium"
        android:textSize="14sp"
        android:textColor="@android:color/darker_gray"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/clothingName" />

    <!-- Price of the clothing -->
    <TextView
        android:id="@+id/clothingPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$19.99"
        android:textSize="14sp"
        android:textColor="@android:color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/clothingSize" />
</androidx.constraintlayout.widget.ConstraintLayout>
